<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral_variant10"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/image_border"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/cardImage"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:rotation="0"
                android:scaleType="centerCrop"
                android:translationX="-20dp"
                app:srcCompat="@drawable/african_daisy" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Flower Name"
                android:textColor="@color/material_dynamic_tertiary90"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/cardDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="Flower Description"
                android:textColor="@color/material_dynamic_primary90" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>